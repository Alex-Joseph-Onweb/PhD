def sub_modular_maximization(arr, target_modulus):
    # Step 1: Sort the array in descending order
    arr.sort(reverse=True)
    
    # Step 2: Initialize the result to 0
    result = 0
    
    # Step 3: Iterate through the sorted array
    for num in arr:
        # If adding the current element doesn't exceed the target modulus
        if (result + num) % target_modulus >= result % target_modulus:
            result += num
    
    return result

arr = [3, 7, 2, 8, 4, 5]
target_modulus = 10

result = sub_modular_maximization(arr, target_modulus)
print(f"Maximum sub-modular sum mod {target_modulus} is: {result}")

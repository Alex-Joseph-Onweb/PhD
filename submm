def sub_modular_maximization(arr, target_modulus):
    arr.sort(reverse=True)
    result = 0    
    for num in arr:
        if (result + num) % target_modulus >= result % target_modulus:
            result += num    
    return result

arr = [3, 7, 2, 8, 4, 5]
max_value = 10
result = sub_modular_maximization(arr, max_value)
print(f"Maximum sub-modular sum mod {max_value} is: {result}")
